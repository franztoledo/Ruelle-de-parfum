// Fuente de datos: SQLite local por ahora
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Cliente de Prisma
generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

// Modelo Ãºnico: Producto
model Producto {
  id          Int      @id @default(autoincrement())
  nombre      String
  tipo        String // "perfume", "celular", "zapatilla", etc.
  descripcion String? // opcional
  precio      Float
  imagen      String
  createdAt   DateTime @default(now())
}
