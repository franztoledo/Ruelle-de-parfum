generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ðŸ‘ˆ aquÃ­ cambias de "sqlite" a "postgresql"
  url = env("DATABASE_URL")
}

model Producto {
  id          Int      @id @default(autoincrement())
  nombre      String
  tipo        String
  marca       String
  descripcion String?
  precio      Float
  imagen      String
  createdAt   DateTime @default(now())
}