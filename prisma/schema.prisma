generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Producto {
  id          Int      @id @default(autoincrement())
  nombre      String
  tipo        String
  marca       String
  descripcion String?
  precio      Float
  imagen      String
  createdAt   DateTime @default(now())
}